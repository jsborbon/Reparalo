root = true

# General settings
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# Kotlin-specific rules
[*.{kt,kts}]
max_line_length = 120

# Permite PascalCase para funciones anotadas con @Composable
ktlint_function_naming_ignore_when_annotated_with = Composable